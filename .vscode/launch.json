    "version": "0.2.0",
    "configurations": [
         {
            "name": "[Linux] Debug asciiid",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/asciiid",
            "console": "externalTerminal",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "[Linux] Debug game",
